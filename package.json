{
  "name": "gifty-api",
  "version": "1.0.0",
  "description": "Real Estate API with Hexagonal Architecture",
  "main": "dist/server.js",
  "_moduleAliases": {
    "@modules": "dist/modules",
    "@shared": "dist/shared",
    "@validation": "dist/shared/application/validation",
    "@errors": "dist/shared/infrastructure/errors",
    "@middleware": "dist/shared/infrastructure/middleware",
    "@logging": "dist/shared/infrastructure/logging",
    "@database": "dist/shared/infrastructure/database",
    "@cache": "dist/shared/infrastructure/cache",
    "@user-model": "dist/modules/user/infrastructure/user.model",
    "@user-repository": "dist/modules/user/infrastructure/user.repository",
    "@user-service": "dist/modules/user/application/user.service",
    "@user-controller": "dist/modules/user/interface/user.controller",
    "@role-model": "dist/modules/role/infrastructure/role.model",
    "@role-repository": "dist/modules/role/infrastructure/role.repository",
    "@role-service": "dist/modules/role/application/role.service",
    "@role-controller": "dist/modules/role/interface/role.controller",
    "@utils": "dist/shared/utils"
  },
  "scripts": {
    "start": "node -r module-alias/register dist/server.js",
    "dev": "ts-node-dev -r tsconfig-paths/register --respawn --transpile-only server.ts",
    "build": "tsc && tsc-alias",
    "test": "jest --detectOpenHandles",
    "test:watch": "jest --watch --detectOpenHandles",
    "test:coverage": "jest --coverage --detectOpenHandles",
    "test:unit": "jest --testMatch='**/*.test.ts' --detectOpenHandles",
    "test:integration": "jest --testMatch='**/*.integration.test.ts' --detectOpenHandles",
    "test:e2e": "jest --testMatch='**/*.e2e.test.ts' --detectOpenHandles",
    "cleanup": "bash scripts/cleanup.sh",
    "clean-install": "npm run cleanup && npm install"
  },
  "dependencies": {
    "bcrypt": "^5.1.1",
    "bcryptjs": "^2.4.3",
    "cloudinary": "^2.5.1",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.18.2",
    "handlebars": "^4.7.8",
    "helmet": "^7.0.0",
    "joi": "^17.11.0",
    "jsonwebtoken": "^9.0.2",
    "module-alias": "^2.2.3",
    "mongoose": "^7.6.3",
    "multer": "^1.4.5-lts.1",
    "nodemailer": "^6.9.16",
    "passport": "^0.6.0",
    "passport-facebook": "^3.0.0",
    "passport-google-oauth20": "^2.0.0",
    "passport-jwt": "^4.0.1",
    "puppeteer": "^24.4.0",
    "qrcode": "^1.5.4",
    "slugify": "^1.6.6",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.0",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "@babel/core": "^7.26.0",
    "@babel/node": "^7.26.0",
    "@babel/preset-env": "^7.26.0",
    "@types/bcrypt": "^5.0.2",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0",
    "@types/helmet": "^4.0.0",
    "@types/jest": "^29.5.5",
    "@types/jsonwebtoken": "^9.0.9",
    "@types/mongoose": "^5.11.97",
    "@types/node": "^22.13.10",
    "@types/nodemailer": "^6.4.17",
    "@types/passport": "^1.0.17",
    "@types/passport-jwt": "^4.0.1",
    "@types/redis": "^4.0.11",
    "@types/supertest": "^6.0.2",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.8",
    "babel-plugin-module-resolver": "^5.0.2",
    "jest": "^29.7.0",
    "mongodb-memory-server": "^9.1.6",
    "nodemon": "^3.0.1",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "tsc-alias": "^1.8.11",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.8.2"
  }
}
