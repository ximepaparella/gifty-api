            "url": {
              "raw": "{{baseUrl}}/api/v1/users/setup-admin",
              "host": ["{{baseUrl}}"],
              "path": ["api", "v1", "users", "setup-admin"]
            },
            "description": "Create first admin user"
          },
          "response": []
        }
      ]
    },
    {
